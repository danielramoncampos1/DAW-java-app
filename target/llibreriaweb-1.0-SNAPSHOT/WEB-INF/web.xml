<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <welcome-file-list>
        <welcome-file>llibreria.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Servlet HelloWorldServlet -->
    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.mycompany.llibreriaweb.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- Servlet UsersServlet -->
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>com.mycompany.llibreriaweb.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <!-- Servlet Consulta -->
    <servlet>
        <servlet-name>Consulta</servlet-name>
        <servlet-class>com.mycompany.llibreriaweb.Consulta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Consulta</servlet-name>
        <url-pattern>/consulta</url-pattern>
    </servlet-mapping>

    <!-- Servlet InsertarLlibreServlet -->
    <servlet>
        <servlet-name>InsertarLlibreServlet</servlet-name>
        <servlet-class>com.mycompany.llibreriaweb.InsertarLlibreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertarLlibreServlet</servlet-name>
        <url-pattern>/InsertarLlibreServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet EditarLlibresServlet -->
    <servlet>
        <servlet-name>EditarLlibresServlet</servlet-name>
        <servlet-class>com.mycompany.llibreriaweb.EditarLlibresServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarLlibresServlet</servlet-name>
        <url-pattern>/editarLlibres</url-pattern>
    </servlet-mapping>

    <!-- Servlet EliminarLlibreServlet -->
    <servlet>
        <servlet-name>EliminarLlibresServlet</servlet-name>
        <servlet-class>com.mycompany.llibreriaweb.EliminarLlibresServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EliminarLlibresServlet</servlet-name>
        <url-pattern>/eliminarLlibres</url-pattern>
    </servlet-mapping>

</web-app>
